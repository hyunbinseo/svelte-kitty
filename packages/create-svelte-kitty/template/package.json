{
	"name": "svelte-kitty-starter",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kitty build",
		"build:send": "svelte-kitty build --send",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"start": "node build/start",
		"start:pm2": "pm2 start pm2.config.cjs",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:prod": "drizzle-kit migrate --config=drizzle.production.ts",
		"db:studio": "drizzle-kit studio",
		"db:studio:prod": "drizzle-kit studio --config=drizzle.production.ts"
	},
	"dependencies": {
		"@hyunbinseo/tools": "^0.3.9",
		"better-sqlite3": "^12.5.0",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.44.7",
		"new-request": "^0.0.33",
		"ulid": "^3.0.2",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.10.4",
		"autoprefixer": "^10.4.22",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"jose": "^6.1.3",
		"pm2-ecosystem": "^6.0.13",
		"postcss": "^8.5.6",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"svelte-form-enhanced": "^0.2.1",
		"svelte-html-modal": "^3.2.0",
		"svelte-kitty": "workspace:^",
		"tailwindcss": "^3.4.19",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"vite": "^7.2.7"
	},
	"engines": {
		"node": ">=24.11"
	}
}
