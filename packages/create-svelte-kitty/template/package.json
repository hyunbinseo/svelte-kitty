{
	"name": "svelte-kitty-starter",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"start": "node build/start",
		"start:pm2": "pm2 start pm2.config.cjs",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:cli": "svelte-kit sync && tsc --project ./db/tsconfig.check.json",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:prod": "drizzle-kit migrate --config=drizzle.production.ts",
		"db:studio": "drizzle-kit studio",
		"db:studio:prod": "drizzle-kit studio --config=drizzle.production.ts"
	},
	"dependencies": {
		"@hyunbinseo/tools": "^0.3.9",
		"better-sqlite3": "^12.6.2",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"new-request": "^0.0.34",
		"ulid": "^3.0.2",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.5.1",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.10.9",
		"autoprefixer": "^10.4.23",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"jose": "^6.1.3",
		"pm2-ecosystem": "^6.0.14",
		"postcss": "^8.5.6",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.0",
		"svelte-check": "^4.3.5",
		"svelte-form-enhanced": "^0.2.1",
		"svelte-html-modal": "^3.2.0",
		"tailwindcss": "^3.4.19",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1"
	},
	"engines": {
		"node": ">=24.11"
	}
}
