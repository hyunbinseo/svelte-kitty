{
	"name": "svelte-kitty-starter",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kitty build",
		"build:send": "svelte-kitty build --send",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"start": "node build/start",
		"start:pm2": "pm2 start pm2.config.cjs",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:prod": "drizzle-kit migrate --config=drizzle.production.ts",
		"db:studio": "drizzle-kit studio",
		"db:studio:prod": "drizzle-kit studio --config=drizzle.production.ts"
	},
	"dependencies": {
		"@hyunbinseo/tools": "^0.3.5",
		"better-sqlite3": "^11.8.1",
		"drizzle-kit": "^0.30.5",
		"drizzle-orm": "^0.40.0",
		"ulid": "^2.3.0",
		"valibot": "1.0.0-rc.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.21.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.17.3",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^22.13.5",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-plugin-svelte": "^3.0.2",
		"globals": "^16.0.0",
		"jose": "^6.0.7",
		"new-request": "^0.0.21",
		"pm2-ecosystem": "^5.4.3",
		"postcss": "^8.5.3",
		"prettier": "^3.5.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.20.4",
		"svelte-check": "^4.1.4",
		"svelte-form-enhanced": "^0.2.1",
		"svelte-html-modal": "^3.0.0",
		"svelte-kitty": "workspace:^",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.25.0",
		"vite": "^6.2.0"
	},
	"engines": {
		"node": ">=22.12.0"
	}
}
